<Application x:Class="MusicList.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MusicList"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Mendefinisikan style MaterialDesignFloatingActionButton -->
        <Style TargetType="Button" x:Key="MaterialDesignFloatingActionButton">
            <Setter Property="Background" Value="{x:Null}"/>
            <!-- Tambahkan properti lain sesuai kebutuhan -->
        </Style>

        <!-- Menggunakan style MaterialDesignFloatingActionButton -->
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFloatingActionButton}" x:Key="ActionButtons">
            <Setter Property="Foreground" Value="Cyan"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
        </Style>
    </Application.Resources>
</Application>
